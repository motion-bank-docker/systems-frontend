// App Shared Color Variables
// --------------------------------------------------
// It's highly recommended to change the default colors
// to match your app's branding.

//$primary   = #729BFF
$primary   = #3882ff
$primary50 = #3882ff88
$primary66 = #3882ffaa
$secondary = #665EB8
$tertiary  = #632E62

$neutral   = #E0E1E2
$positive  = #558451
$negative  = #a73e1f
$info      = #156558
$warning   = #ab5921

$darker = #131212
//$dark = #252324
$dark = #292728
$grey = #3A3739
$faded = #4C494A
$light = #8F898C

$white = #bdb7ba

$border-radius = .35em

$body-background = #1f1d1e
// $body-background = #ffffff
$body-color = $white

$sl-highlight = #1bb258
//$sl-medium = #322f31
$sl-medium = #393638


/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
 * base styling
 */

a
  color $primary
  text-decoration none

body
  background: $dark


/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
 * quasar overrides
 */

.q-layout-drawer
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  border: 1px solid $darker

.q-popover
  background: $dark
  border: 1px solid $darker

.q-list
  border: 0

.q-btn
  &.q-btn-flat
    &:hover
      background: $sl-medium

// TODO: do we need to use -dark quasar modifiers or just style the default option?
.q-table-container
.q-card
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none

.q-table-container.q-table-dark
  .q-table-top
    border-top: 1px solid $darker
  td
  table
  thead
    border-color: $darker
  tbody
    tr
      &:hover
        background: $darker


/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
 * custom classes
 */

.ui-border
  border: 1px solid $darker

.ui-border-left
  border-left: 1px solid $darker

.ui-border-right
  border-right: 1px solid $darker

.ui-border-bottom
  border-bottom: 1px solid $darker

.ui-border-top
  border-top: 1px solid $darker

.popup-shadow
  background: $sl-medium
  -webkit-box-shadow: 0 10px 30px rgba(0,0,0,0.5)
  -moz-box-shadow: 0 10px 30px rgba(0,0,0,0.5)
  box-shadow: 0 10px 30px rgba(0,0,0,0.5)
  border: 1px solid $darker
